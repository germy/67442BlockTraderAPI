<h1>Listing bid_histories</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Order</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bid_histories.each do |bid_history| %>
      <tr>
        <td><%= bid_history.user_id %></td>
        <td><%= bid_history.order_id %></td>
        <td><%= bid_history.price %></td>
        <td><%= link_to 'Show', bid_history %></td>
        <td><%= link_to 'Edit', edit_bid_history_path(bid_history) %></td>
        <td><%= link_to 'Destroy', bid_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

