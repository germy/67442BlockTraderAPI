<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Food order</th>
      <th>Customer</th>
      <th>Provider</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Delivery status</th>
      <th>Payment id user</th>
      <th>Payment id receiever</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.food_order_id %></td>
        <td><%= order.customer_id %></td>
        <td><%= order.provider_id %></td>
        <td><%= order.address %></td>
        <td><%= order.latitude %></td>
        <td><%= order.longitude %></td>
        <td><%= order.delivery_status %></td>
        <td><%= order.payment_id_user %></td>
        <td><%= order.payment_id_receiever %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

